<StackPanel x:Class="Ann.SettingWindow.SettingPage.About.AboutView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:app="clr-namespace:Ann"
            xmlns:core="clr-namespace:Ann.Core;assembly=Ann.Core"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:foundation="clr-namespace:Ann.Foundation;assembly=Ann.Foundation"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            x:Name="This"
            d:DataContext="{d:DesignData GeneralViewModel}"
            d:DesignHeight="600"
            d:DesignWidth="600"
            mc:Ignorable="d">
    <TextBlock FontSize="24"
               Style="{StaticResource SubheadingTextBlockStyle}"
               Text="Ann" />
    <TextBlock Text="{Binding Source={x:Static app:CultureService.Instance}, Path=Resources.Ann_Introduction, Mode=OneWay}" />

    <StackPanel Margin="0,32,0,0" Orientation="Horizontal">
        <TextBlock Text="{Binding Source={x:Static app:CultureService.Instance}, Path=Resources.Version, Mode=OneWay}" />
        <TextBlock Margin="4,0,0,0" Text="{x:Static foundation:AssemblyConstants.Version}" />
    </StackPanel>
    <StackPanel Margin="0,4,0,0" Orientation="Horizontal">
        <ContentControl Margin="0,0,4,0"
                        VerticalAlignment="Center"
                        Focusable="False"
                        IsTabStop="False">
            <ContentControl.Resources>
                <Style TargetType="{x:Type materialDesign:PackIcon}">
                    <Setter Property="Width" Value="16" />
                    <Setter Property="Height" Value="16" />
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="Margin" Value="0" />
                </Style>
            </ContentControl.Resources>
            <ContentControl.Style>
                <Style TargetType="{x:Type ContentControl}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding VersionCheckingState.Value, Mode=OneWay}" Value="{x:Static core:VersionCheckingStates.Checking}">
                            <Setter Property="Content">
                                <Setter.Value>
                                    <ProgressBar Width="16"
                                                 Height="16"
                                                 Margin="0"
                                                 VerticalAlignment="Center"
                                                 Foreground="DodgerBlue"
                                                 IsIndeterminate="True"
                                                 Padding="0"
                                                 Style="{StaticResource MaterialDesignCircularProgressBar}"
                                                 Value="0" />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding VersionCheckingState.Value, Mode=OneWay}" Value="{x:Static core:VersionCheckingStates.Downloading}">
                            <Setter Property="Content">
                                <Setter.Value>
                                    <ProgressBar Width="16"
                                                 Height="16"
                                                 Margin="0"
                                                 VerticalAlignment="Center"
                                                 Foreground="DodgerBlue"
                                                 IsIndeterminate="True"
                                                 Padding="0"
                                                 Style="{StaticResource MaterialDesignCircularProgressBar}"
                                                 Value="0" />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding VersionCheckingState.Value, Mode=OneWay}" Value="{x:Static core:VersionCheckingStates.Downloaded}">
                            <Setter Property="Content">
                                <Setter.Value>
                                    <materialDesign:PackIcon Foreground="Orange" Kind="NewBox" />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding VersionCheckingState.Value, Mode=OneWay}" Value="{x:Static core:VersionCheckingStates.Latest}">
                            <Setter Property="Content">
                                <Setter.Value>
                                    <materialDesign:PackIcon Foreground="DodgerBlue" Kind="CheckboxMarkedCircle" />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding VersionCheckingState.Value, Mode=OneWay}" Value="{x:Static core:VersionCheckingStates.Unknown}">
                            <Setter Property="Content">
                                <Setter.Value>
                                    <materialDesign:PackIcon Foreground="LightSeaGreen" Kind="ServerRemove" />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>

        <TextBlock VerticalAlignment="Center">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding VersionCheckingState.Value, Mode=OneWay}" Value="{x:Static core:VersionCheckingStates.Checking}">
                            <Setter Property="Text" Value="{Binding Source={x:Static app:CultureService.Instance}, Path=Resources.VersionChecker_Checking, Mode=OneWay}" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding VersionCheckingState.Value, Mode=OneWay}" Value="{x:Static core:VersionCheckingStates.Downloading}">
                            <Setter Property="Text" Value="{Binding Source={x:Static app:CultureService.Instance}, Path=Resources.VersionChecker_Downloading, Mode=OneWay}" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding VersionCheckingState.Value, Mode=OneWay}" Value="{x:Static core:VersionCheckingStates.Downloaded}">
                            <Setter Property="Text" Value="{Binding Source={x:Static app:CultureService.Instance}, Path=Resources.VersionChecker_Downloaded, Mode=OneWay}" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding VersionCheckingState.Value, Mode=OneWay}" Value="{x:Static core:VersionCheckingStates.Latest}">
                            <Setter Property="Text" Value="{Binding Source={x:Static app:CultureService.Instance}, Path=Resources.VersionChecker_Latest, Mode=OneWay}" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding VersionCheckingState.Value, Mode=OneWay}" Value="{x:Static core:VersionCheckingStates.Unknown}">
                            <Setter Property="Text" Value="{Binding Source={x:Static app:CultureService.Instance}, Path=Resources.VersionChecker_Unknown, Mode=OneWay}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        <StackPanel Orientation="Horizontal">
            <StackPanel.Style>
                <Style TargetType="{x:Type StackPanel}">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding VersionCheckingState.Value, Mode=OneWay}" Value="{x:Static core:VersionCheckingStates.Downloading}">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>

            <TextBlock Text="(" />
            <TextBlock Text="{Binding UpdateProgress.Value, Mode=OneWay}" />
            <TextBlock Text="%)" />
        </StackPanel>
    </StackPanel>
    <Button HorizontalAlignment="Left"
            Command="{Binding RestartCommand,
                              Mode=OneTime}"
            Content="{Binding Source={x:Static app:CultureService.Instance},
                              Path=Resources.Restart,
                              Mode=OneWay}">
        <Button.Style>
            <Style BasedOn="{StaticResource FlatButtonStyle}" TargetType="{x:Type Button}">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding VersionCheckingState.Value, Mode=OneWay}" Value="{x:Static core:VersionCheckingStates.Checking}">
                        <Setter Property="Visibility" Value="Hidden" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding VersionCheckingState.Value, Mode=OneWay}" Value="{x:Static core:VersionCheckingStates.Downloading}">
                        <Setter Property="Visibility" Value="Hidden" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding VersionCheckingState.Value, Mode=OneWay}" Value="{x:Static core:VersionCheckingStates.Downloaded}">
                        <Setter Property="Visibility" Value="Visible" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding VersionCheckingState.Value, Mode=OneWay}" Value="{x:Static core:VersionCheckingStates.Latest}">
                        <Setter Property="Visibility" Value="Hidden" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding VersionCheckingState.Value, Mode=OneWay}" Value="{x:Static core:VersionCheckingStates.Unknown}">
                        <Setter Property="Visibility" Value="Hidden" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Button.Style>
    </Button>

    <TextBlock 
       Margin="0,24,0,0" 
        Text="{x:Static foundation:AssemblyConstants.Copyright}" />

    <StackPanel 
       Margin="0,8,0,0" 
                HorizontalAlignment="Left"
                Orientation="Horizontal">
        <Button Margin="0,0,8,0"
                Command="{Binding OpenUrlCommand,
                                  Mode=OneTime}"
                CommandParameter="{x:Static core:Constants.AnnGitHubUrl}"
                Style="{StaticResource MaterialDesignRaisedButton}">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon VerticalAlignment="Center" Kind="GithubCircle" />
                <TextBlock Margin="4,0,0,0" VerticalAlignment="Center">GitHub</TextBlock>
            </StackPanel>
        </Button>
        <Button Margin="0,0,8,0"
                Command="{Binding OpenUrlCommand,
                                  Mode=OneTime}"
                CommandParameter="{x:Static core:Constants.AnnTwitterUrl}"
                Style="{StaticResource MaterialDesignRaisedButton}">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon VerticalAlignment="Center" Kind="Twitter" />
                <TextBlock Margin="4,0,0,0" VerticalAlignment="Center">Twitter</TextBlock>
            </StackPanel>
        </Button>
    </StackPanel>

    <TextBlock Margin="0,32,0,8"
               Style="{StaticResource SubheadingTextBlockStyle}"
               Text="{Binding Source={x:Static app:CultureService.Instance},
                              Path=Resources.UseOpenSourceLibraries,
                              Mode=OneWay}" />

    <ItemsControl FocusVisualStyle="{x:Null}"
                  Focusable="False"
                  IsTabStop="False"
                  ItemsSource="{x:Static core:Constants.OpenSources}"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
        <ItemsControl.ItemTemplate>
            <DataTemplate DataType="{x:Type foundation:OpenSource}">
                <!--  ReSharper disable once Xaml.BindingWithContextNotResolved  -->
                <Button Margin="0,0,8,8"
                        Command="{Binding ElementName=This,
                                          Mode=OneTime,
                                          Path=DataContext.OpenSourceOpenCommand}"
                        CommandParameter="{Binding Mode=OneTime}"
                        Style="{StaticResource MaterialDesignRaisedLightButton}"
                        ToolTip="{Binding Summry,
                                          Mode=OneTime}"
                        ToolTipService.InitialShowDelay="0"
                        ToolTipService.ShowDuration="100000000">
                    <TextBlock Text="{Binding Name, Mode=OneTime}" />
                </Button>
            </DataTemplate>
        </ItemsControl.ItemTemplate>

        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel Orientation="Horizontal" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
    </ItemsControl>
</StackPanel>
